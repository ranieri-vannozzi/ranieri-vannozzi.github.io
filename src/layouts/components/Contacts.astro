---
const { className } = Astro.props;
import contacts from "@/config/contacts.json";
import Social from "./Social.astro";

---
<section class={className} id="contacts">
  <div class="rounded border border-border p-12 lg:p-9 h-full">
    <h4 class="text-primary mb-6">Contacts</h4>

    <div class="flex flex-col md:flex-row justify-between gap-8">
      {/* Email a sinistra */}
      <div class="w-full">
        <p class="">
          {
            contacts.emails.map((email: string) => (
              <li>
                <a href={`mailto:${email}`} class="hover:text-primary">
                  {email}
                </a>
              </li>
            ))
          }
        </p>
      </div>

      {/* Social a destra, allineati pi√π in basso */}
      <div class="w-full flex items-center justify-end">
          <Social source={contacts.socials} className="social-icons flex" />
      </div>
    </div>
  </div>
</section>


